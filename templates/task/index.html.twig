{% extends 'layout/base.html.twig' %}

{% block title %}Mes listes
{% endblock %}

{% block body %}
	<div class="container p-5">
		<div class="row mt-5">

			<H5>Mes listes</H5>
			{% for taskList in taskLists %}
				<div class="col-sm-6" style="width:18em">
					<div class="card shadow">
						<div class="card-body">
							<h5 class="card-title">{{ taskList.name }}</h5>
							<small class="card-text mb-2 d-block">{{ 'Cr√©e le ' ~ taskList.createdAt | date('d/m/Y') }}</small>
							<a href="{{ path('read-list', { id: taskList.id }) }}" class="btn btn-secondary">voir la liste</a>
						</div>
					</div>
				</div>
			{% endfor %}
		</div>

	</div>
{% endblock %}
