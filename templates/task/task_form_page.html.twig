{% extends 'layout/base.html.twig' %}

{% block title %}Mes listes
{% endblock %}

{% block body %}
	<div class="row mt-5">
		<div class="col-md-5 mx-auto">
			<div class="bg-dark p-5 rounded mt-5">
				{{ form_start(form)}}

				<h5 class="text-white text-center mb-5">
					{{ app.request.attributes.get('_route') == 'create-task' ? 'Ajouter une tâche' : 'Modifier une tâche' }}
				</h5>
				<div class="mb-3">
					{{ form_row(form.title)}}
					<small class='text-danger form-error'>{{ form_errors(form.title)}}</small>
				</div>
				<div class="mb-3">
					{{ form_row(form.list)}}
					<small class='text-danger form-error'>{{ form_errors(form.list)}}</small>
				</div>
				<div class="d-flex">
					<div class="mb-3">
						{{ form_row(form.submit)}}
					</div>
					&nbsp;&nbsp;
					<div class="mb-3">
						<a href="{{ path('read-index-lists') }}" class="btn btn-danger mt-5">Annuler</a>
					</div>
				</div>

				{{ form_end(form)}}
			</div>
		</div>
	</div>
{% endblock %}
